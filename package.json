{
  "name": "sand-admin",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "cypress": "cypress run",
    "test:unit": "jest",
    "test:cypress": "yarn cypress --record",
    "test:e2e": "yarn build:ssr && run-p --race serve:ssr test:cypress",
    "test": "jest --watch",
    "coverage:ci": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "lint": "ng lint",
    "affected:apps": "./node_modules/.bin/nx affected apps",
    "affected:build": "./node_modules/.bin/nx affected build",
    "affected:e2e": "./node_modules/.bin/nx affected e2e",
    "format": "pretty-quick",
    "format:write": "./node_modules/.bin/nx format write",
    "format:check": "./node_modules/.bin/nx format check",
    "build:ssr": "yarn build:client-and-server-bundles && yarn webpack:server",
    "build:prerender": "yarn build:client-and-server-bundles && yarn generate:prerender",
    "generate:prerender": "cd dist && node prerender",
    "serve:ssr": "node dist/server.js",
    "serve:prerender": "cd dist/browser && http-server",
    "ssr": "yarn build:ssr && yarn serve:ssr",
    "prerender": "yarn build:prerender && yarn serve:prerender",
    "build:client-and-server-bundles": "ng build --prod --progress=false && ng build --prod --progress=false --app 1 --output-hashing=false",
    "webpack:server": "webpack --config webpack.server.config.js --colors",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "git:commit": "git-cz",
    "changelog": "standard-version",
    "ngrx:codegen": "ts-node codegen.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.3",
    "@angular/cdk": "^5.2.0",
    "@angular/common": "^5.2.3",
    "@angular/compiler": "^5.2.3",
    "@angular/core": "^5.2.3",
    "@angular/flex-layout": "^2.0.0-beta.12",
    "@angular/forms": "^5.2.3",
    "@angular/http": "^5.2.3",
    "@angular/material": "^5.2.0",
    "@angular/platform-browser": "^5.2.3",
    "@angular/platform-browser-dynamic": "^5.2.3",
    "@angular/platform-server": "^5.2.3",
    "@angular/router": "^5.2.3",
    "@angular/service-worker": "^5.2.3",
    "@ngrx-utils/store": "^0.5.2",
    "@ngrx/effects": "github:ngrx/effects-builds",
    "@ngrx/entity": "github:ngrx/entity-builds",
    "@ngrx/router-store": "github:ngrx/router-store-builds",
    "@ngrx/store": "github:ngrx/store-builds",
    "@ngrx/store-devtools": "github:ngrx/store-devtools-builds",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@nrwl/nx": "0.7.3",
    "core-js": "^2.4.1",
    "express": "^4.16.2",
    "hammerjs": "^2.0.8",
    "rxjs": "^5.5.6",
    "ts-loader": "^3.4.0",
    "typescript": "~2.6.2",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular-devkit/core": "^0.2.0",
    "@angular-devkit/schematics": "^0.2.0",
    "@angular/cli": "1.6.7",
    "@angular/compiler-cli": "^5.2.3",
    "@angular/language-service": "^5.2.3",
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "@commitlint/prompt-cli": "^6.1.0",
    "@cypress/watch-preprocessor": "^1.0.0",
    "@cypress/webpack-preprocessor": "^1.1.3",
    "@ngrx/codegen": "github:ngrx/codegen-builds",
    "@ngrx/schematics": "^5.0.0",
    "@nrwl/schematics": "^0.7.3",
    "@schematics/angular": "^0.2.0",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.1",
    "@types/ora": "^1.3.1",
    "codelyzer": "^4.0.1",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cypress": "^1.4.2",
    "cz-conventional-changelog": "^2.1.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "jest": "^22.2.0",
    "jest-preset-angular": "^5.0.0",
    "lint-staged": "^6.1.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "ora": "^1.4.0",
    "prettier": "1.10.2",
    "pretty-quick": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "standard-version": "^4.3.0",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "webpack": "^3.10.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "html"
    ],
    "moduleNameMapper": {
      "@sand-libs/(.*)": "<rootDir>/libs/$1",
      "@sand-app/(.*)": "<rootDir>/apps/sand-admin/src/app/$1",
      "@sand-envs/(.*)": "<rootDir>/apps/sand-admin/src/environments/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "apps/**/*.*",
      "libs/**/*.*",
      "!**/*.{d,actions}.ts",
      "!**/index.{ts,html}",
      "!**/node_modules/**",
      "!**/cypress/**",
      "!**/main.ts",
      "!**/main.server.ts",
      "!**/polyfills.ts",
      "!**/environments/*"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__snapshots__/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "lint-staged": {
    "*.ts": [
      "yarn format --staged",
      "yarn lint",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
